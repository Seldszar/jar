{
  "name": "jar",
  "private": true,
  "main": "dist/index.js",
  "author": "Alexandre Breteau <contact@seldszar.fr> (https://seldszar.fr)",
  "description": "Yet another lightweight webhook server",
  "repository": "seldszar/jar",
  "license": "MIT",
  "bin": {
    "jar": "dist/index.js"
  },
  "scripts": {
    "build": "ncc build src/cli/index.ts --minify --out dist",
    "release": "npm run build && semantic-release",
    "start": "ncc run src/cli/index.ts",
    "test": "eslint --ext .ts src"
  },
  "engine": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "camelcase-keys": "^6.0.1",
    "consola": "^2.10.1",
    "exit-hook": "^2.2.0",
    "got": "^9.6.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "socket.io-client": "^2.3.0",
    "strip-indent": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.141",
    "@types/socket.io-client": "^1.4.32",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^3.0.7",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.24",
    "typescript": "^3.6.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
